{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "resolvePackageJsonExports": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  },
  "include": ["src/**/*", "test/**/*", "apps/**/*", "libs/**/*"],
  "exclude": ["node_modules", "dist"]
}
